<UserControl
    x:Class="MYWFE.Utils.Components.Dialog.CustomMessageBox.CustomMessageBoxView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MYWFE.Utils.Components.Dialog.CustomMessageBox"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Border
        Width="500"
        Padding="20"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Background="{StaticResource DarkColorBrush}"
        CornerRadius="16"
        Focusable="False">
        <StackPanel>
            <TextBlock Style="{StaticResource SubHeaderPageTextStyle}" Text="Окно информации" />
            <TextBlock
                Margin="0,20,0,0"
                Style="{StaticResource DefaultText}"
                Text="{Binding MainText}"
                TextWrapping="Wrap" />
            <StackPanel
                Margin="0,30,0,0"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    Margin="0,0,20,0"
                    Command="{Binding DismissCommand}"
                    Content="Назад"
                    Cursor="Hand"
                    FontSize="14"
                    FontWeight="Bold"
                    Style="{StaticResource CustomButton}" />
                <Button
                    Command="{Binding ConfirmCommand}"
                    Content="Подтвердить"
                    FontSize="14"
                    FontWeight="Bold"
                    Style="{StaticResource CustomButton}" />
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
